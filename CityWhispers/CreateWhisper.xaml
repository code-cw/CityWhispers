<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityWhispers.CreateWhisper">
    <NavigationPage.ToolbarItems>
        <ToolbarItem Text="Whisper!"
                     Clicked="Send_Whisper" />
    </NavigationPage.ToolbarItems>
    <StackLayout>
        <StackLayout Orientation="Horizontal" VerticalOptions="Fill">
            <Label VerticalOptions="Center"
                   HorizontalOptions="StartAndExpand"
                   Margin="10"
                   Text="Whisper anonymous">
            </Label>
            <Switch Margin="10"
                    HorizontalOptions="EndAndExpand"
                    VerticalOptions="Center"
                    x:Name="anonymous">
            </Switch>
        </StackLayout>
        <Grid x:Name="grid" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
        </Grid>
    </StackLayout>
</ContentPage>
