        <ToolbarItem Text="Whisper!"
                     Clicked="Send_Whisper" />
    </NavigationPage.ToolbarItems>
    <ContentPage.Content>
        <!--<ScrollView>-->
            <Grid x:Name="grid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.01*" />
                    <RowDefinition Height="2.99*" />
                </Grid.RowDefinitions>
            </Grid>
        <!--</ScrollView>-->
    </ContentPage.Content>
</ContentPage>
