<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityWhispers.MainPageMap"
             xmlns:local="clr-namespace:CityWhispers;assembly=CityWhispers"
             Title="Map">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ContentPage"
               FontSize="40"
               FontAttributes="Bold"
               HorizontalOptions="Start" />
               
            <Label Text="ContentPage is the simplest type of page."
               FontSize="Large" />

            <Label Text=
                    "The content of a ContentPage is generally a
                    layout of some sort that can then be a parent
                    to multiple children."
               FontSize="Large" />

            <Label Text=
                    "This ContentPage contains a StackLayout, which
                    in turn contains four Label views (including the
                    large one at the top)"
               FontSize="Large" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
